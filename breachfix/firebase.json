{
  "hosting": {

    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [ 
      {
      "source": "Access-Control-Allow-Credentials: true",
      "headers": [ {
        "key": "Access-Control-Allow-Origin",
        "value": "*"
                   } ]
      }  
     ]
    }
  
}
